{
    "compilerOptions": {
      "target": "es6",
      "outDir": "dist",
      "lib": ["es2017", "dom"],
      "types": ["reflect-metadata"],
      "module": "commonjs",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.json"
    ],
    "exclude": [
      "node_modules"
    ]
}
